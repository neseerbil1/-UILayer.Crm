@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRole2";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<h1>Rol Atama İşlemleri</h1>
<form method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        //Model dizisi içindeki tüm roller gösterilerek, kullanıcının bu rollerden hangilerine sahip olduğu 
        //veya olmayıp olmadığı belirtilebilmektedir.
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleId" />
            <input type="hidden" asp-for="@Model[i].Name" />
            <input type="checkbox" asp-for="@Model[i].Exists" />
            <label class="form-check-label">@Model[i].Name</label>
        </div>
    }
    <button class="btn btn-warning">Rol Düzenle</button>
</form>
